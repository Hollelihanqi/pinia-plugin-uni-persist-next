{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tag": false,
    "requireCleanWorkingDir": false,
    "commit": true,
    "push": true
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": ["pnpm build"],
    "after:bump": "echo 版本号已更新",
    "after:release": "echo 发布成功，准备提交到 Git"
  }
}
