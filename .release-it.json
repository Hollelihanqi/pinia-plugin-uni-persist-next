{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tag": false,
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": ["pnpm build"]
  }
}
